# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /hadatac/                               controllers.Portal.index()
POST    /hadatac/                               controllers.Portal.postIndex()
GET     /hadatac/measurements                   controllers.Application.index()
POST    /hadatac/measurements                   controllers.Application.postIndex()
GET	/hadatac/spatial			controllers.Spatial.index()
POST	/hadatac/spatial			controllers.Spatial.postIndex()
GET	/hadatac/metadata  			controllers.Metadata.index()
POST	/hadatac/metadata			controllers.Metadata.postIndex()
GET	/hadatac/metadata/platform	    	controllers.Platform.index()
POST	/hadatac/metadata/platform   		controllers.Platform.postIndex()
GET	/hadatac/metadata/platformlist	        controllers.PlatformList.index()
POST	/hadatac/metadata/platformlist   	controllers.PlatformList.postIndex()
GET	/hadatac/metadata/instrument		controllers.Instrument.index()
POST	/hadatac/metadata/instrument		controllers.Instrument.postIndex()
GET	/hadatac/metadata/instrumentlist	controllers.InstrumentList.index()
POST	/hadatac/metadata/instrumentlist	controllers.InstrumentList.postIndex()
GET	/hadatac/metadata/detector		controllers.Detector.index()
POST	/hadatac/metadata/detector		controllers.Detector.postIndex()
GET	/hadatac/metadata/detectorlist		controllers.DetectorList.index()
POST	/hadatac/metadata/detectorlist		controllers.DetectorList.postIndex()
GET	/hadatac/metadata/entity		controllers.Entity.index()
POST	/hadatac/metadata/entity		controllers.Entity.postIndex()
GET	/hadatac/metadata/characteristic        controllers.Characteristic.index()
POST	/hadatac/metadata/characteristic        controllers.Characteristic.postIndex()
GET	/hadatac/metadata/unit                  controllers.Unit.index()
POST	/hadatac/metadata/unit                  controllers.Unit.postIndex()
GET	/hadatac/metadata/agent			controllers.Agent.index()
POST	/hadatac/metadata/agent			controllers.Agent.postIndex()

# Authorization URLs
GET     /hadatac/auth                           controllers.AuthApplication.index
GET     /hadatac/restricted                     controllers.AuthApplication.restricted
GET     /hadatac/assets/javascript/routes.js    controllers.AuthApplication.jsRoutes
GET     /hadatac/profile                        controllers.AuthApplication.profile
GET     /hadatac/login                          controllers.AuthApplication.login
POST    /hadatac/login                          controllers.AuthApplication.doLogin
GET     /hadatac/logout                         com.feth.play.module.pa.controllers.Authenticate.logout
GET     /hadatac/authenticate/:provider         com.feth.play.module.pa.controllers.Authenticate.authenticate(provider: String)
GET     /hadatac/signup                         controllers.AuthApplication.signup
POST    /hadatac/signup                         controllers.AuthApplication.doSignup
GET     /hadatac/accounts/unverified            controllers.Signup.unverified
GET     /hadatac/authenticate/:provider/denied  controllers.Signup.oAuthDenied(provider: String)
GET     /hadatac/accounts/verify/:token         controllers.Signup.verify(token: String)
GET     /hadatac/accounts/exists                controllers.Signup.exists
GET     /hadatac/accounts/password/reset/:token controllers.Signup.resetPassword(token: String)
POST    /hadatac/accounts/password/reset        controllers.Signup.doResetPassword
GET     /hadatac/accounts/password/change       controllers.Account.changePassword
POST    /hadatac/accounts/password/change       controllers.Account.doChangePassword
GET     /hadatac/accounts/verify                controllers.Account.verifyEmail
GET     /hadatac/accounts/add                   controllers.Account.link
GET     /hadatac/accounts/link                  controllers.Account.askLink
POST    /hadatac/accounts/link                  controllers.Account.doLink
GET     /hadatac/accounts/merge                 controllers.Account.askMerge
POST    /hadatac/accounts/merge                 controllers.Account.doMerge
GET     /hadatac/login/password/forgot          controllers.Signup.forgotPassword(email: String ?= "")
POST    /hadatac/login/password/forgot          controllers.Signup.doForgotPassword

# metadata store management URLs
GET     /hadatac/management/clean               controllers.Management.cleanTS
POST    /hadatac/management/clean               controllers.Management.postCleanTS
GET     /hadatac/management/loadont             controllers.Management.loadOntTS
POST    /hadatac/management/loadont             controllers.Management.postLoadOntTS
GET     /hadatac/management/loadkb              controllers.Management.loadKbTS
POST    /hadatac/management/loadkb              controllers.Management.postLoadKbTS
 
# Map static resources from the /public folder to the /assets URL path
GET     /hadatac/assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)
