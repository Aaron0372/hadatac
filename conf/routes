# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET	    /hadatac/                                 org.hadatac.console.controllers.Portal.index()
POST	/hadatac/                                 org.hadatac.console.controllers.Portal.postIndex()
GET	    /hadatac/measurements                     org.hadatac.console.controllers.Application.index(p: Int ?= 1, q: String ?= "*:*")
POST	/hadatac/measurements                     org.hadatac.console.controllers.Application.postIndex(p: Int ?= 1, q: String ?= "*:*")
